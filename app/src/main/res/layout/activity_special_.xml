<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/hot_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#F84E4E">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/iv_fanhui_special"
            android:src="@mipmap/ic_action_back"
            android:layout_alignBottom="@+id/tv_happy"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="全部专题"
            android:id="@+id/tv_happy"
            android:textColor="#FFFAFA"
            android:textSize="20sp" />
    </RelativeLayout>
    <com.xiaoliwu.yll.utils.RefreshableView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/hot_relativeLayout"
        android:id="@+id/yll_special">
        <ListView
            android:listSelector="#00000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ll_home_special_one"
            android:dividerHeight="0dp"
            android:divider="@null"></ListView>
    </com.xiaoliwu.yll.utils.RefreshableView>
</RelativeLayout>
