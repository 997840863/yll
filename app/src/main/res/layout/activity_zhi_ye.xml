<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xiaoliwu.yll.activity.ZhiYeActivity">

    <RelativeLayout
        android:id="@+id/zhiye"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#F84E4E">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="选择职业"
            android:textColor="#FFFAFA"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/tv1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="30dp"
            android:src="@mipmap/bbbb"

            />
    </RelativeLayout>
    <TextView
        android:layout_below="@+id/zhiye"
        android:id="@+id/textView"
        android:layout_width="match_parent"

        android:layout_height="20dp" />
    <RelativeLayout
        android:id="@+id/zhiye2"
        android:layout_below="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/image1"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_dropdown_check"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toRightOf="@+id/image1"
            android:layout_width="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:text="初中生"
            android:textSize="20dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/zhiye3"
        android:layout_below="@+id/zhiye2"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/image2"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_dropdown_check"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toRightOf="@+id/image2"
            android:layout_width="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:text="高中生"
            android:textSize="20dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/zhiye4"
        android:layout_below="@+id/zhiye3"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/image3"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_dropdown_check"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toRightOf="@+id/image3"
            android:layout_width="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:text="大学生"
            android:textSize="20dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/zhiye5"
        android:layout_below="@+id/zhiye4"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/image4"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_dropdown_check"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toRightOf="@+id/image4"
            android:layout_width="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:text="职场新人"
            android:textSize="20dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/zhiye6"
        android:layout_below="@+id/zhiye5"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/image5"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_dropdown_check"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toRightOf="@+id/image5"
            android:layout_width="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:text="资深工作党"
            android:textSize="20dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>


</RelativeLayout>
