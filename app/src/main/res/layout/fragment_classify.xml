<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/classify_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#F84E4E">

        <LinearLayout
            android:id="@+id/classify_linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="#fff"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/classify_strategy"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@drawable/miaobian6"
                android:gravity="center"
                android:text="攻略"
                android:textColor="#F96565" />

            <TextView
                android:id="@+id/classify_gift"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@drawable/miaobian5"
                android:gravity="center"
                android:text="礼物"
                android:textColor="#ffffff" />

        </LinearLayout>

        <ImageView
            android:id="@+id/classify_search"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/tv_liwu"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:src="@mipmap/ic_menu_search" />

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/classify_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
