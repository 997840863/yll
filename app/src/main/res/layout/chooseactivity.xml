<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_user_select_type">


    <RelativeLayout
        android:layout_width="240dp"
        android:layout_height="380dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="#FFFFFFFF">

        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="请输入你的性别"
            android:textSize="40px" />

        <LinearLayout
            android:id="@+id/ll_sex"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tv_sex"
            android:layout_marginTop="20dp"
            android:background="#ff787783">

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_boy"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/ll_sex"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="80dp"
            android:src="@mipmap/ic_gender_boy" />

        <ImageView
            android:id="@+id/iv_girl"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/iv_boy"
            android:layout_marginRight="40dp"
            android:src="@mipmap/ic_gender_girl" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/iv_boy"
            android:layout_marginLeft="55dp"
            android:text="男孩"
            android:textSize="40px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/iv_girl"
            android:layout_marginRight="55dp"
            android:text="女孩"
            android:textSize="40px" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
</RelativeLayout>
