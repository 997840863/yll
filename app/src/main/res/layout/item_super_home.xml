<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="fitXY"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/iv_home_gift"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/tv_home_title"
        android:layout_alignBottom="@+id/iv_home_gift"
        android:layout_marginLeft="30dp"
        android:textColor="#fbffff"/>
    <ImageView
        android:layout_width="65dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:id="@+id/iv_home_background"
        android:layout_marginRight="20dp"
        android:src="@mipmap/bg_feed_favourite"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="17dp"
        android:id="@+id/iv_home_like"
        android:layout_marginRight="60dp"
        android:src="@mipmap/baichuan_btn_favorites_selected"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_home_count"
        android:textSize="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="21dp"
        android:layout_marginRight="28dp"
        android:textColor="#fbffff"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/iv_home_gift"/>
</RelativeLayout>
