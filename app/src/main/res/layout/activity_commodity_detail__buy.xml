<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xiaoliwu.yll.activity.CommodityDetail_BuyActivity">

    <RelativeLayout
        android:id="@+id/buy_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#F84E4E">

        <ImageView
            android:id="@+id/buy_action_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/textView"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:background="@mipmap/ic_action_back" />

        <TextView
            android:layout_toRightOf="@+id/buy_action_back"
            android:layout_toLeftOf="@+id/buy_menu_share"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/textView"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:textColor="#FFFAFA"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/buy_menu_share"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/textView"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:background="@mipmap/ic_menu_share" />
    </RelativeLayout>

    <WebView
        android:layout_below="@+id/buy_relativeLayout"
        android:id="@+id/commodityDetail_BuyActivity_webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></WebView>

</RelativeLayout>
