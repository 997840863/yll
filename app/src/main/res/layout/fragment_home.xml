<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:id="@+id/home_relativeLayout"
        android:background="#F84E4E"
        android:layout_width="match_parent"
        android:layout_height="65dp">
        <TextView
            android:text="礼物说"
            android:textColor="#FFFAFA"
            android:textSize="20sp"
            android:id="@+id/tv_liwu"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/iv_scan"
            android:src="@mipmap/ic_toolkit_zebra_scanner"
            android:layout_alignBottom="@+id/tv_liwu"
            android:layout_marginLeft="20dp"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/iv_search"
            android:src="@mipmap/ic_menu_search"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/tv_liwu"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/ac_tab_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="#F00"
        android:layout_below="@+id/home_relativeLayout"
        android:fillViewport="false">
    </android.support.design.widget.TabLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/arrow_index_down"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/home_relativeLayout"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/ac_tab_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_below="@+id/ac_tab_layout"/>
</RelativeLayout>
